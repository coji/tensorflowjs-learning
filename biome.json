{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true },
    "ignore": ["node_modules", "build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "ignore": ["node_modules", "build"]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "all"
    }
  }
}
